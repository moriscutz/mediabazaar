@page
@model MediaBazaarWeb.Pages.AvailabilitiesModel
@{
    ViewData["Title"] = "Availabilities";
}
<head>
    <link rel="stylesheet" href="~/css/PageStyleSheet.css" asp-append-version="true" />
</head>
<body>
    <h2>Set Your Availabilities</h2>

    <form method="post">
        @for (int day = 1; day <= 7; day++)
        {
            <div>
                <label>Availabilities for Day @SetDay(day-1):</label>
                <select asp-for="SelectedAvailabilities[day]" asp-items="Model.ShiftTypes"></select>
            </div>
        }

        <button type="submit">Save Availabilities</button>
    </form>
</body>

@functions{
    private string SetDay(int day)
    {
        switch(day)
        {
            case 0:
                return "Monday";
            case 1:
                return "Tuesday";
            case 2:
                return "Wednesday";
            case 3:
                return "Thursday";
            case 4:
                return "Friday";
            case 5:
                return "Saturday";
            case 6:
                return "Sunday";
             default:
                return null;

        }
    }
    
}