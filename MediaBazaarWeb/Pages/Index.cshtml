@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link rel="stylesheet" href="~/css/PageStyleSheet.css" asp-append-version="true" />
</head>
<body>
    <div class="centered-container">
        <form method="post" asp-page-handler="Login">
            <div class="form-group text-center">
                <label for="Username">Username</label>
                <input asp-for="loginDto.Username" type="text" class="form-control" required />
            </div>
            <div class="form-group text-center">
                <label for="password">Password</label>
                <input asp-for="loginDto.Password" type="password" class="form-control" required />
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" class="btn btn-primary btn-lg" value="Login">
            </div>
            @if (TempData.ContainsKey("CredentialsWrong"))
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["CredentialsWrong"]
                    </div>
                }
        </form>
    </div>
</body>