@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>

</head>
<body>
    <form method="post" asp-page-handler="Login">
        <div class="form-group text-center">
            <label for="ID">ID</label>
            <input asp-for="CurrentEmployee.ID" type="number" class="form-control" required />
        </div>
        <div class="form-group text-center">
            <label for="password">Password</label>
            <input asp-for="CurrentEmployee.Password" type="password" class="form-control" required />
        </div>
        <br />
        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary btn-lg" value="Login">
        </div>
        @if (TempData.ContainsKey("CredentialsWrong"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["CredentialsWrong"]
                </div>
            }
    </form>
</body>